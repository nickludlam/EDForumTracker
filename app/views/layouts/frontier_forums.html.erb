  <title>Elite Forums Tracker</title>
	
  <script type="text/javascript" src="http://forums.frontier.co.uk/clientscript/vbulletin_quick_edit_generic.js?v=422"></script>
  <script type="text/javascript" src="http://forums.frontier.co.uk/clientscript/vbulletin_quick_edit_visitormessage.js?v=422"></script>
  <script type="text/javascript" src="http://forums.frontier.co.uk/clientscript/vbulletin_activitystream.js?v=422"></script>
	
  <link rel="stylesheet" type="text/css" href="http://forums.frontier.co.uk/css.php?styleid=13&langid=1&d=1414172413&td=ltr&sheet=activitystream.css,sidebar.css,forumbits.css,postbit.css,postbit-lite.css,showthread.css,member.css,user,32574" />
	
  <!--[if lt IE 8]><link rel="stylesheet" type="text/css" href="css.php?styleid=13&langid=1&d=1414172413&td=ltr&sheet=sidebar-ie.css,member-ie.css,postbit-lite-ie.css" /><![endif]-->
	
  <link rel="stylesheet" type="text/css" href="http://forums.frontier.co.uk/css.php?userid=32574&cssuid=0&d=1414253213&td=ltr&styleid=0&sheet=userprofile.css" />
  <link rel="stylesheet" type="text/css" href="http://forums.frontier.co.uk/css.php?styleid=13&langid=1&d=1414172413&td=ltr&sheet=additional.css" />

  <style type="text/css">
  /* Some custom styles to help things stand out a bit more */
  
  .btn {
      padding: 2px;
      margin: 2px;
  } 
  
  .body_wrapper {
    margin-top: 20px;
    border-top: 2px solid #999;
  }
  
  div.excerpt { 
    font-size: 130%;
  }

  .title a {
    color: rgb(220, 70, 0) !important;
  }
  
  .below_body, #footer_morecopyright {
    background-color: white;
  }
  
  .eft_footer {
    text-align: center;
  }

  .search-form {
    background-color: #EEE;
    border: 1px solid #DDD;
    padding: 5px;
  }
  </style>

